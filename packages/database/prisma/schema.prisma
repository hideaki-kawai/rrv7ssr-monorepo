generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "esm"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/**
 * ユーザー権限列挙型
 */
enum UserRole {
  ADMIN
  GENERAL
}

/**
 * ユーザーテーブル
 */
model User {
  id          String    @id @default(cuid())
  email       String    @unique
  password    String
  name        String?
  role        UserRole  @default(GENERAL)
  isActive    Boolean   @default(true)
  lastLoginAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  refreshTokens RefreshToken[]

  @@map("users")
}

/**
 * リフレッシュトークンテーブル
 * ユーザーのリフレッシュトークンを保存
 */
model RefreshToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId])
  @@index([expiresAt])
  @@map("refresh_tokens")
}
